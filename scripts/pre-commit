#ï¼/usr/bash

echo "\033[32m >>> Git-hook is running ...\033[0m"

# sync execution
node ./scripts/main.js

git status -s > ./scripts/.cache-log

diffFile=`cat ./scripts/.cache-log | grep -Eio "\S+\.(md|MD)"`

if [ -n "$diffFile" ]; then
  git add $diffFile
  #git commit --amend --no-edit
fi

rm ./scripts/.cache-log